@model TestTask.Models.ConfigurableText

<div class="text-center">
    <h1 class="display-4" style="color: #333; font-size: 2.5rem; text-align: center;">Welcome</h1>
    <p style="font-size: 1.2rem; text-align: center;">Url Shortener</p>

    @if (User.IsInRole("Admin"))
    {
        <form method="post" asp-action="About">
            <textarea name="newText" style="width: 100%; height: 150px; padding: 10px; font-size: 1rem; text-align: justify;">@Model.Text</textarea>
            <br />
            <input type="submit" value="Save" style="margin-top: 10px; padding: 8px 16px; font-size: 1rem; background-color: #4CAF50; color: white; border: none; cursor: pointer;">
        </form>
    }

    <p style="margin-top: 20px; font-size: 1.2rem; text-align: justify;">@Model.Text</p>
</div>
